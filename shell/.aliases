# PHP
alias a="php artisan"
alias ar="php artisan remote"
alias c="composer"
alias cda="composer dump-autoload -o"
alias ci="composer install"
alias copykey='command cat ~/.ssh/id_rsa.public | pbcopy'
alias cr="composer require"
alias cu="composer update"
alias d="php artisan dusk"
alias deploy-code='envoy run deploy-code'
alias deploy='envoy run deploy'
alias hostfile="sudo vi /etc/hosts"
alias larastan="vendor/bin/phpstan analyse"
alias mfs='php artisan migrate:fresh --seed'
alias nah='git reset --hard;git clean -df'
alias phpunit="vendor/bin/phpunit"
alias phpunitw="phpunit-watcher watch"
alias pp="php artisan test --parallel"
alias sail='./vendor/bin/sail'
alias sshconfig="vi ~/.ssh/config"
alias tunnel='valet share -subdomain=jacobgraf -region=us'

# JavaScript
alias jest="./node_modules/.bin/jest"

# Git
alias gc="git checkout"
alias glog="git log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit"
alias gm="git merge"
alias gpo="git push origin"
alias uncommit="git reset --soft HEAD~1"

# Fast open
alias o="open ."

# List all files colorized in long format
alias l="ls -laF"

# PhpStorm
alias phpstorm='open -a /Applications/PhpStorm.app "`pwd`"'

# PHP
alias switch-php74="brew unlink php && brew link --overwrite --force php@7.4"
alias switch-php80="brew unlink php@7.4 && brew link --overwrite --force php"

# Redis
alias flush-redis="redis-cli FLUSHALL"

# Show/hide hidden files in Finder
alias hide="defaults write com.apple.finder AppleShowAllFiles -bool false && killall Finder"
alias show="defaults write com.apple.finder AppleShowAllFiles -bool true && killall Finder"

# IP addresses
alias ip="curl ifconfig.me/ip ; echo"
alias localip="ifconfig -a | grep -o 'inet6\? \(addr:\)\?\s\?\(\(\([0-9]\+\.\)\{3\}[0-9]\+\)\|[a-fA-F0-9:]\+\)' | awk '{ sub(/inet6? (addr:)? ?/, \"\"); print }'"

# Flush Directory Service cache
alias flushdns="sudo dscacheutil -flushcache; sudo killall -HUP mDNSResponder"

# Lock the screen
alias afk="osascript -e 'tell application \"System Events\" to keystroke \"q\" using {command down,control down}'"

# Empty the Trash on all mounted volumes and the main HDD
# Also, clear Apple’s System Logs to improve shell startup speed
alias emptytrash="sudo rm -rfv /Volumes/*/.Trashes; sudo rm -rfv ~/.Trash; sudo rm -rfv /private/var/log/asl/*.asl"

# Enable aliases to be sudo’ed
alias sudo='sudo '

# Scape webpage
alias scrape="scrapeUrl"

# Switch NPM
alias npmnpm="npm config set registry https://registry.npmjs.org"
alias npmspatie="npm config set registry https://npm.spatie.be"

# Sublime Text 3
alias subl='open -a "/Applications/Sublime Text.app" "`pwd`"'

# Mackup
# alias mb="mackup -f backup"

# Restart touch bar
alias touchbar="killall ControlStrip"

# Other
alias aliases="code ~/.dotfiles/shell/.aliases"
alias cc="php artisan config:cache"
alias cgu="composer global update"
alias cls="clear"
# alias code="code ."
alias dotfiles="cd ~/.dotfiles && code ."
alias droid="scrcpy --turn-screen-off --disable-screensaver --show-touches --stay-awake --keyboard=aoa"
alias next="npx create-next-app@latest"
alias nginx-log="open ~/.config/valet/Log/nginx-error.log"
alias nrb="npm run build"
alias nrbstory="npm run build-storybook"
alias nrd="npm run dev"
alias nrp="npm run prod"
alias nrs="npm run start"
alias nrstory="npm run storybook"
alias nrw="npm run watch"
alias nu="npm update"
alias pa="php artisan"
alias php-log="open ~/.config/valet/Log/php-fpm.log"
alias pip="/opt/homebrew/bin/pip3"
alias pu="clear && phpunit"
alias python="/usr/local/bin/python3"
alias sail='[ -f sail ] && bash sail || bash vendor/bin/sail'
alias update="brew update && brew upgrade && brew cleanup; composer global update; softwareupdate -i -a;"
